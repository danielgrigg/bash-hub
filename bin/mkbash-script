#!/usr/bin/env bash

if [[ $# < 1 ]]; then 
  echo "Usage: mkbash <script_name>"
  exit 1
fi

script_name=$1
target=~/bin/$script_name

echo "#!/usr/bin/env bash" > $target
echo 'DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

NORMAL=$(tput sgr0)
GREEN=$(tput setaf 2; tput bold)
YELLOW=$(tput setaf 3)
RED=$(tput setaf 1)

function red() {
  echo -e "$RED$*$NORMAL"
}

function green() {
  echo -e "$GREEN$*$NORMAL"
}

function yellow() {
  echo -e "$YELLOW$*$NORMAL"
}

' >> $target

chmod 755 $target

